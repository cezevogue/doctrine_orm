{% extends 'base.html.twig' %}


{% block stylesheet %}
    
{% endblock %}


{% block body %}
<h1 class="mt-5">Bienvenue sur la liste des produits</h1>

    <table class="table table-dark table-striped mt-5">
        <thead>
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Prix</th>
            <th>Date</th>
            <th>Photo</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for product in products  %}


        <tr>
            <td>{{ product.id }}</td>
            <td>{{ product.title }}</td>
            <td>{{ product.price }}â‚¬</td>
            <td>{{ product.publishDate | date('d/m/Y') }}</td>
            <td><img src="{{ asset('upload/') }}{{ product.picture }}" width="90" alt=""></td>
            <td>
                <a href="{{ path('productDetail', {'id': product.id}) }}" class="btn btn-secondary m-1">Voir</a>
                <a href="{{ path('updateProduct', {'id': product.id}) }}" class="btn btn-warning m-1">Modifier</a>
                <a href="{{ path('deleteProduct', {'id': product.id}) }}" class="btn btn-danger m-1">Supprimer</a>

            </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
    
    
    
{% endblock %}
